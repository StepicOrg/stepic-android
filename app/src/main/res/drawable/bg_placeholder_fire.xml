<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/placeholder_radius" />
            <solid android:color="#33000000" />
        </shape>
    </item>
    <item>
        <shape
            android:shape="rectangle">
            <gradient
                android:angle="@integer/gradient_angle"
                android:centerColor="@color/center_gradient_fire"
                android:endColor="@color/end_gradient_fire"
                android:startColor="@color/start_gradient_fire"
                android:type="linear"/>

            <corners android:radius="@dimen/placeholder_radius"/>
        </shape>
    </item>
</selector>