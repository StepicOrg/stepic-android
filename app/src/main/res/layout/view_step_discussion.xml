<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_step_discussion_button">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/stepDiscussionsCount"
        android:layout_width="wrap_content"
        android:layout_height="48dp"

        android:gravity="start|center_vertical"
        android:layout_gravity="center"

        android:textColor="@color/color_step_discussion"
        android:textSize="16sp"
        android:drawablePadding="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"

        android:ellipsize="end"
        android:maxLines="2"

        android:duplicateParentState="true"

        tools:drawableStart="@drawable/ic_step_discussion"
        tools:text="Открыть комментарии (1)" />

</FrameLayout>