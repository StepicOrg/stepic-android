<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <TextView
        android:id="@+id/video_quality_presence_text"
        android:textSize="14sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:text="@string/video_quality_presence_message"/>

    <ListView
        android:id="@+id/video_quality_list_choices"
        android:layout_below="@id/video_quality_presence_text"
        android:divider="@null"
        android:dividerHeight="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <CheckBox
        android:id="@+id/video_quality_do_not_ask_checkbox"
        style="@style/SettingCompoundButton"
        android:textSize="14sp"
        android:layout_below="@id/video_quality_list_choices"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/do_not_ask_me_again"/>

</RelativeLayout>